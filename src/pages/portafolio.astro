---
import Layout from '../layouts/Layout.astro';
import LeftSidebar from '../components/LeftSidebar.tsx';
import AllyCard from '../components/AllyCard.tsx';
import RGBText from '../components/RGBText.tsx';
import AnimatedCode from '../components/AnimatedCode.tsx';
---

<Layout title="Portafolio - NotiTech">
	<div class="flex min-h-screen relative overflow-hidden">
		<!-- Cybernetic Background -->
		<div class="fixed inset-0 z-0 cybernetic-bg">
			<div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-blue-900/20 to-purple-900/20"></div>
			<div class="absolute inset-0 grid-pattern"></div>
			<div class="absolute inset-0 scanlines"></div>
			<div class="absolute top-0 left-0 w-full h-full overflow-hidden">
				<div class="cyber-line line-1"></div>
				<div class="cyber-line line-2"></div>
				<div class="cyber-line line-3"></div>
				<div class="cyber-line line-4"></div>
			</div>
			<div class="absolute inset-0 glow-effect"></div>
		</div>
		
		<LeftSidebar client:load currentPage="portafolio" />
		<main class="flex-1 p-4 sm:p-6 md:p-8 pb-24 relative z-10">
			<div class="max-w-7xl mx-auto">
				<div class="flex flex-col lg:flex-row items-center lg:items-start gap-6 sm:gap-8 lg:gap-12 mt-4 sm:mt-6 lg:mt-8">
					<div class="flex-1 lg:w-3/5 w-full">
						<div class="mb-3 sm:mb-4">
							<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-blue-400 mb-0 leading-tight">
								Hola, soy <RGBText client:load className="font-bold">Cristian</RGBText>
							</h1>
							<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-0 leading-tight">
								<RGBText client:load className="font-bold">Daniel Herrera</RGBText>
							</h1>
						</div>
						<h2 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold text-blue-400 mb-4 sm:mb-6">Full Stack Developer</h2>
						<p class="text-gray-300 text-sm sm:text-base md:text-lg mb-6 sm:mb-8 leading-relaxed max-w-2xl">
							Lorem ipsum dolor sit amet consectetur adipisicing elit. Eligendi, ea laudantium dolorum beatae vitae quae aperiam, magnam delectus illum voluptate corrupti. Cupiditate non quisquam ex.
						</p>
						<div class="flex flex-col sm:flex-row flex-wrap gap-3 sm:gap-4 mb-8 sm:mb-12">
							<button class="w-full sm:w-auto px-6 sm:px-8 py-2.5 sm:py-3 bg-blue-500 text-white rounded-lg font-semibold hover:bg-blue-600 transition shadow-lg shadow-blue-500/50 text-sm sm:text-base">Hire Me</button>
							<button class="w-full sm:w-auto px-6 sm:px-8 py-2.5 sm:py-3 bg-transparent border-2 border-blue-500 text-white rounded-lg font-semibold hover:bg-blue-500/10 transition text-sm sm:text-base">Let's Talk</button>
						</div>
						<div class="flex gap-3 sm:gap-4 mb-8 sm:mb-12">
							<a href="#" class="w-12 h-12 rounded-full border-2 border-white/30 flex items-center justify-center text-white hover:border-blue-400 hover:text-blue-400 transition">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
								</svg>
							</a>
							<a href="#" class="w-12 h-12 rounded-full border-2 border-white/30 flex items-center justify-center text-white hover:border-blue-400 hover:text-blue-400 transition">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
								</svg>
							</a>
							<a href="#" class="w-12 h-12 rounded-full border-2 border-white/30 flex items-center justify-center text-white hover:border-blue-400 hover:text-blue-400 transition">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
								</svg>
							</a>
						</div>
						<div class="mt-12">
							<h3 class="text-2xl font-bold text-white mb-6">Aliados estratégicos</h3>
							<div class="flex flex-wrap gap-6 items-center">
								<AllyCard client:load name="TCF capital" description="TCF Capital es un aliado estratégico especializado en inversiones y servicios financieros. Trabajamos juntos para ofrecer soluciones innovadoras en el sector financiero." link="https://tcfcapital.com" />
								<AllyCard client:load name="SLE" displayName="SLE Developers" description="Descripción del aliado estratégico. Información sobre la colaboración y los servicios que ofrecen." link="https://ejemplo.com" />
							</div>
						</div>
					</div>
					<div class="flex-1 lg:w-2/5 relative w-full mt-12 sm:mt-16 lg:mt-20">
						<div class="relative w-full max-w-lg sm:max-w-xl md:max-w-2xl mx-auto">
							<AnimatedCode client:load />
						</div>
					</div>
				</div>
			</div>
			
			<!-- Timeline Section -->
			<div class="max-w-7xl mx-auto mt-20 sm:mt-24 lg:mt-32 px-4 sm:px-6 md:px-8">
				<div class="text-center mb-12 sm:mb-16">
					<h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-blue-400 mb-4">Mi Trayectoria</h2>
					<p class="text-gray-300 text-base sm:text-lg">Una línea de tiempo de mi crecimiento profesional</p>
				</div>
				
				<div class="relative max-w-4xl mx-auto">
					<!-- Timeline Line -->
					<div class="absolute left-4 sm:left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-blue-500 via-blue-400 to-blue-500 opacity-60"></div>
					
					<!-- Timeline Items -->
					<div class="space-y-12 sm:space-y-16">
						<!-- Item 1 -->
						<div class="relative pl-12 sm:pl-20">
							<div class="absolute left-2 sm:left-6 top-2 w-4 h-4 sm:w-6 sm:h-6 bg-blue-500 rounded-full border-4 border-gray-900 shadow-lg shadow-blue-500/50"></div>
							<div class="absolute left-3 sm:left-7 top-3 w-2 h-2 sm:w-4 sm:h-4 bg-blue-400 rounded-full animate-pulse"></div>
							<div class="bg-gray-800/80 backdrop-blur-sm rounded-lg border border-gray-700 p-6 sm:p-8 shadow-xl">
								<div class="flex items-center gap-3 mb-4">
									<div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-900/50 rounded-lg flex items-center justify-center border border-blue-500/30">
										<svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14v7m0 0l-3-3m3 3l3-3" />
										</svg>
									</div>
									<span class="px-3 py-1 bg-blue-900/50 text-blue-300 text-xs sm:text-sm font-semibold rounded border border-blue-500/30">2021 - 2024</span>
								</div>
								<h3 class="text-xl sm:text-2xl font-bold text-white mb-2">Pregrado en Ingeniería Financiera</h3>
								<p class="text-blue-400 text-sm sm:text-base mb-3">Pontificia Universidad Javeriana</p>
								<p class="text-gray-300 text-sm sm:text-base leading-relaxed">Formación académica sólida en análisis financiero, gestión de riesgos, matemáticas financieras y economía. Skills: Python, Excel avanzado y análisis de datos.</p>
							</div>
						</div>
						
						<!-- Item 2 -->
						<div class="relative pl-12 sm:pl-20">
							<div class="absolute left-2 sm:left-6 top-2 w-4 h-4 sm:w-6 sm:h-6 bg-blue-500 rounded-full border-4 border-gray-900 shadow-lg shadow-blue-500/50"></div>
							<div class="absolute left-3 sm:left-7 top-3 w-2 h-2 sm:w-4 sm:h-4 bg-blue-400 rounded-full animate-pulse"></div>
							<div class="bg-gray-800/80 backdrop-blur-sm rounded-lg border border-gray-700 p-6 sm:p-8 shadow-xl">
								<div class="flex items-center gap-3 mb-4">
									<div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-900/50 rounded-lg flex items-center justify-center border border-blue-500/30">
										<svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
										</svg>
									</div>
									<span class="px-3 py-1 bg-blue-900/50 text-blue-300 text-xs sm:text-sm font-semibold rounded border border-blue-500/30">2022</span>
								</div>
								<h3 class="text-xl sm:text-2xl font-bold text-white mb-2">Certificado en desarrollo y bases de dato</h3>
								<p class="text-blue-400 text-sm sm:text-base mb-3">ALURA LATAM</p>
								<p class="text-gray-300 text-sm sm:text-base leading-relaxed">Inicio en el desarrollo frontend y backend. Tecnologías: WordPress, JavaScript, HTML y CSS.</p>
							</div>
						</div>
						
						<!-- Item 3 -->
						<div class="relative pl-12 sm:pl-20">
							<div class="absolute left-2 sm:left-6 top-2 w-4 h-4 sm:w-6 sm:h-6 bg-blue-500 rounded-full border-4 border-gray-900 shadow-lg shadow-blue-500/50"></div>
							<div class="absolute left-3 sm:left-7 top-3 w-2 h-2 sm:w-4 sm:h-4 bg-blue-400 rounded-full animate-pulse"></div>
							<div class="bg-gray-800/80 backdrop-blur-sm rounded-lg border border-gray-700 p-6 sm:p-8 shadow-xl">
								<div class="flex items-center gap-3 mb-4">
									<div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-900/50 rounded-lg flex items-center justify-center border border-blue-500/30">
										<svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
										</svg>
									</div>
									<span class="px-3 py-1 bg-blue-900/50 text-blue-300 text-xs sm:text-sm font-semibold rounded border border-blue-500/30">2023</span>
								</div>
								<h3 class="text-xl sm:text-2xl font-bold text-white mb-2">Ecommerce</h3>
								<p class="text-gray-300 text-sm sm:text-base leading-relaxed">Desarrollo de plataformas de comercio electrónico. Experiencia en integración de pagos y gestión de inventarios.</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
</Layout>

<style>
	.cybernetic-bg {
		background: #0a0a0f;
	}
	
	.grid-pattern {
		background-image: 
			linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px),
			linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px);
		background-size: 50px 50px;
		animation: grid-move 20s linear infinite;
	}
	
	@keyframes grid-move {
		0% { transform: translate(0, 0); }
		100% { transform: translate(50px, 50px); }
	}
	
	.scanlines {
		background: repeating-linear-gradient(
			0deg,
			transparent,
			transparent 2px,
			rgba(59, 130, 246, 0.03) 2px,
			rgba(59, 130, 246, 0.03) 4px
		);
		animation: scanline 8s linear infinite;
	}
	
	@keyframes scanline {
		0% { transform: translateY(0); }
		100% { transform: translateY(100vh); }
	}
	
	.cyber-line {
		position: absolute;
		height: 1px;
		background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.5), transparent);
		box-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
		animation: line-move 15s linear infinite;
	}
	
	.cyber-line.line-1 {
		top: 20%;
		width: 100%;
		animation-delay: 0s;
	}
	
	.cyber-line.line-2 {
		top: 40%;
		width: 80%;
		left: 10%;
		animation-delay: -5s;
	}
	
	.cyber-line.line-3 {
		top: 60%;
		width: 60%;
		left: 20%;
		animation-delay: -10s;
	}
	
	.cyber-line.line-4 {
		top: 80%;
		width: 90%;
		left: 5%;
		animation-delay: -7s;
	}
	
	@keyframes line-move {
		0% {
			transform: translateX(-100%);
			opacity: 0;
		}
		10% {
			opacity: 1;
		}
		90% {
			opacity: 1;
		}
		100% {
			transform: translateX(100vw);
			opacity: 0;
		}
	}
	
	.glow-effect {
		background: radial-gradient(
			circle at 20% 50%,
			rgba(59, 130, 246, 0.15) 0%,
			transparent 50%
		),
		radial-gradient(
			circle at 80% 80%,
			rgba(147, 51, 234, 0.15) 0%,
			transparent 50%
		);
		animation: glow-pulse 4s ease-in-out infinite alternate;
	}
	
	@keyframes glow-pulse {
		0% { opacity: 0.5; }
		100% { opacity: 1; }
	}
	
	main {
		background: rgba(17, 24, 39, 0.7);
		backdrop-filter: blur(1px);
	}
</style>
