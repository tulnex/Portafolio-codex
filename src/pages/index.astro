---
import Layout from '../layouts/Layout.astro';
import LeftSidebar from '../components/LeftSidebar.tsx';
import RightSidebar from '../components/RightSidebar.tsx';
---

<Layout>
	<div class="flex min-h-screen">
		<LeftSidebar client:load currentPage="home" />
		<main class="flex-1 ml-16 mr-80 p-8 bg-gray-50">
			<div class="max-w-6xl mx-auto">
				<!-- Header -->
				<div class="mb-8">
					<h1 class="text-4xl font-bold text-black mb-2">
						Bienvenido a tu Dashboard
					</h1>
					<p class="text-gray-600">
						Gestiona tu equipo y flujos de trabajo desde un solo lugar
					</p>
				</div>

				<!-- Welcome Cards -->
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
					<!-- Quick Actions Card -->
					<div class="bg-white rounded-lg p-6 shadow-sm">
						<div class="flex items-center gap-3 mb-4">
							<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
								</svg>
							</div>
							<h2 class="text-xl font-semibold text-black">Acciones Rápidas</h2>
						</div>
						<div class="space-y-3">
							<a href="/organization" class="block p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
								<div class="flex items-center justify-between">
									<span class="text-gray-700">Ver Organización</span>
									<svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								</div>
							</a>
							<div class="p-3 bg-gray-50 rounded-lg">
								<div class="flex items-center justify-between">
									<span class="text-gray-700">Crear Nuevo Proyecto</span>
									<svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								</div>
							</div>
							<div class="p-3 bg-gray-50 rounded-lg">
								<div class="flex items-center justify-between">
									<span class="text-gray-700">Configurar Equipo</span>
									<svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								</div>
							</div>
						</div>
					</div>

					<!-- Stats Overview Card -->
					<div class="bg-white rounded-lg p-6 shadow-sm">
						<div class="flex items-center gap-3 mb-4">
							<div class="w-12 h-12 bg-lime-100 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
								</svg>
							</div>
							<h2 class="text-xl font-semibold text-black">Resumen de Estadísticas</h2>
						</div>
						<div class="space-y-4">
							<div class="flex items-center justify-between">
								<span class="text-gray-600">Operaciones Totales</span>
								<span class="text-2xl font-bold text-black">780</span>
							</div>
							<div class="flex items-center justify-between">
								<span class="text-gray-600">Transferencia de Datos</span>
								<span class="text-2xl font-bold text-lime-600">163 MB</span>
							</div>
							<div class="flex items-center justify-between">
								<span class="text-gray-600">Equipos Activos</span>
								<span class="text-2xl font-bold text-blue-600">12</span>
							</div>
						</div>
					</div>
				</div>

				<!-- Recent Activity -->
				<div class="bg-white rounded-lg p-6 shadow-sm">
					<h2 class="text-xl font-semibold text-black mb-4">Actividad Reciente</h2>
					<div class="space-y-3">
						<div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg">
							<div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
								<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
								</svg>
							</div>
							<div class="flex-1">
								<p class="text-sm font-medium text-black">Nuevo proyecto creado</p>
								<p class="text-xs text-gray-500">Hace 2 horas</p>
							</div>
						</div>
						<div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg">
							<div class="w-10 h-10 bg-lime-100 rounded-full flex items-center justify-center">
								<svg class="w-5 h-5 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
							</div>
							<div class="flex-1">
								<p class="text-sm font-medium text-black">Tarea completada</p>
								<p class="text-xs text-gray-500">Hace 5 horas</p>
							</div>
						</div>
						<div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg">
							<div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
								<svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
								</svg>
							</div>
							<div class="flex-1">
								<p class="text-sm font-medium text-black">Nuevo miembro agregado al equipo</p>
								<p class="text-xs text-gray-500">Ayer</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
		<RightSidebar client:load />
	</div>
</Layout>
