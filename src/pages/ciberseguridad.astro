---
import Layout from '../layouts/Layout.astro';
import LeftSidebar from '../components/LeftSidebar.tsx';
---

<Layout title="Ciberseguridad - NotiTech">
	<div class="flex min-h-screen">
		<LeftSidebar client:load currentPage="ciberseguridad" />
		<main class="flex-1 p-8 bg-gray-900 pb-24">
			<div class="max-w-6xl mx-auto">
				<!-- Header -->
				<div class="mb-8">
					<h1 class="text-4xl font-bold text-white mb-2">
						Ciberseguridad
					</h1>
					<p class="text-gray-300">
						Recursos y guías sobre seguridad informática y protección digital
					</p>
				</div>

				<!-- Navigation Tabs -->
				<div class="bg-gray-800 rounded-lg p-4 shadow-sm mb-6 border border-gray-700">
					<div class="flex flex-wrap gap-2">
						<a href="#seguridad-personal" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Seguridad Personal
						</a>
						<a href="#seguridad-corporativa" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Seguridad Corporativa
						</a>
						<a href="#terminologia" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Terminología
						</a>
						<a href="#noticias" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Noticias
						</a>
					</div>
				</div>

				<!-- Sección 1: Seguridad Personal -->
				<section id="seguridad-personal" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-blue-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Seguridad Personal</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Seguridad Personal -->
							<p class="text-gray-300">Contenido sobre seguridad personal...</p>
						</div>
					</div>
				</section>

				<!-- Sección 2: Seguridad Corporativa -->
				<section id="seguridad-corporativa" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-green-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Seguridad Corporativa</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Seguridad Corporativa -->
							<p class="text-gray-300">Contenido sobre seguridad corporativa...</p>
						</div>
					</div>
				</section>

				<!-- Sección 3: Terminología -->
				<section id="terminologia" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-purple-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Terminología</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Terminología -->
							<p class="text-gray-300">Glosario de términos de ciberseguridad...</p>
						</div>
					</div>
				</section>

				<!-- Sección 4: Noticias -->
				<section id="noticias" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-orange-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-orange-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Noticias</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Noticias -->
							<p class="text-gray-300">Últimas noticias sobre ciberseguridad...</p>
						</div>
					</div>
				</section>
			</div>
		</main>
	</div>
</Layout>
