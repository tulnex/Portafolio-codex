---
import Layout from '../layouts/Layout.astro';
import LeftSidebar from '../components/LeftSidebar.tsx';
---

<Layout title="Ai - NotiTech">
	<div class="flex min-h-screen">
		<LeftSidebar client:load currentPage="ai" />
		<main class="flex-1 p-8 bg-gray-900 pb-24">
			<div class="max-w-6xl mx-auto">
				<!-- Header -->
				<div class="mb-8">
					<h1 class="text-4xl font-bold text-white mb-2">
						Ai
					</h1>
					<p class="text-gray-300">
						Inteligencia Artificial y Machine Learning
					</p>
				</div>

				<!-- Navigation Tabs -->
				<div class="bg-gray-800 rounded-lg p-4 shadow-sm mb-6 border border-gray-700">
					<div class="flex flex-wrap gap-2">
						<a href="#ai-flujos" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							AI en flujos de trabajo
						</a>
						<a href="#prompts" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Prompts
						</a>
						<a href="#herramientas-ai" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Herramientas de AI
						</a>
					</div>
				</div>

				<!-- Sección 1: AI en flujos de trabajo -->
				<section id="ai-flujos" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-indigo-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">AI en flujos de trabajo</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de AI en flujos de trabajo -->
							<p class="text-gray-300">Contenido sobre AI en flujos de trabajo...</p>
						</div>
					</div>
				</section>

				<!-- Sección 2: Prompts -->
				<section id="prompts" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-blue-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Prompts</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Prompts -->
							<p class="text-gray-300">Contenido sobre prompts...</p>
						</div>
					</div>
				</section>

				<!-- Sección 3: Herramientas de AI -->
				<section id="herramientas-ai" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-purple-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Herramientas de AI</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Herramientas de AI -->
							<p class="text-gray-300">Contenido sobre herramientas de AI...</p>
						</div>
					</div>
				</section>
			</div>
		</main>
	</div>
</Layout>
