---
import Layout from '../layouts/Layout.astro';
import LeftSidebar from '../components/LeftSidebar.tsx';
---

<Layout title="NotiTech - Noticias y Artículos sobre Tecnología">
	<div class="flex min-h-screen">
		<LeftSidebar client:load currentPage="notitech" />
		<main class="flex-1 p-8 bg-gray-900 pb-24">
			<div class="max-w-6xl mx-auto">
				<!-- Header -->
				<div class="mb-8">
					<h1 class="text-4xl font-bold text-white mb-2">
						NotiTech
					</h1>
					<p class="text-gray-300">
						Explora noticias y artículos por categoría
					</p>
				</div>

				<!-- Navigation Tabs -->
				<div class="bg-gray-800 rounded-lg p-4 shadow-sm mb-6 border border-gray-700">
					<div class="flex flex-wrap gap-2">
						<a href="#tecnologia" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Tecnología
						</a>
						<a href="#gaming" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Gaming
						</a>
						<a href="#ciberseguridad" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Ciberseguridad
						</a>
						<a href="#hardware" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							Hardware
						</a>
						<a href="#ai" class="px-4 py-2 bg-gray-700 text-gray-200 rounded-lg hover:bg-gray-600 transition text-sm font-medium">
							AI
						</a>
					</div>
				</div>

				<!-- Sección 1: Tecnología -->
				<section id="tecnologia" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-blue-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Tecnología</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Tecnología -->
							<p class="text-gray-300">Noticias y artículos sobre tecnología...</p>
						</div>
					</div>
				</section>

				<!-- Sección 2: Gaming -->
				<section id="gaming" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-purple-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Gaming</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Gaming -->
							<p class="text-gray-300">Noticias y artículos sobre gaming...</p>
						</div>
					</div>
				</section>

				<!-- Sección 3: Ciberseguridad -->
				<section id="ciberseguridad" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-red-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Ciberseguridad</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Ciberseguridad -->
							<p class="text-gray-300">Noticias y artículos sobre ciberseguridad...</p>
						</div>
					</div>
				</section>

				<!-- Sección 4: Hardware -->
				<section id="hardware" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-orange-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-orange-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">Hardware</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de Hardware -->
							<p class="text-gray-300">Noticias y artículos sobre hardware...</p>
						</div>
					</div>
				</section>

				<!-- Sección 5: AI -->
				<section id="ai" class="mb-8">
					<div class="bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-700">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-12 h-12 bg-indigo-900 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-white">AI</h2>
						</div>
						<div class="space-y-4">
							<!-- Contenido de AI -->
							<p class="text-gray-300">Noticias y artículos sobre inteligencia artificial...</p>
						</div>
					</div>
				</section>
			</div>
		</main>
	</div>
</Layout>
